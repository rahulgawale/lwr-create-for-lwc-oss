{
    "name": "lwr-snippets",
    "displayName": "lwr-snippets",
    "description": "Code snippets to create LWC Open Source components.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.69.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:lwr-snippets.createLwc",
        "onCommand:lwr-snippets.createLayout"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "lwr-snippets.createLwc",
                "title": "LWR: Create Lightning Web Component"
            },
            {
                "command": "lwr-snippets.createLayout",
                "title": "LWR: Create Layout"
            }
        ]
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.69.0",
        "@vscode/test-electron": "^2.1.5",
        "eslint": "^8.18.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "typescript": "^4.7.4"
    },
    "dependencies": {
        "mustache": "^4.2.0"
    }
}
